  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.4",
    "css-paint-polyfill": "^3.4.0",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.4",
    "next": "13.4.4",
    "nodemon": "^2.0.22",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.63.4",
    "typescript": "5.1.3",
    "uglify-js": "^3.17.4"
  }
}
